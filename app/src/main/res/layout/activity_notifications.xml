<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textViewOne"
        android:layout_width="234dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textViewTwo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="3dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Оставайтесь всегда на связи"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/textViewTwo"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="149dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="35dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Шаг 6/10"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/your_image_view_id"
        android:layout_width="match_parent"
        android:layout_height="598dp"
        android:layout_below="@+id/textViewOne"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="2dp"
        android:scaleType="fitCenter" />


    <TextView
        android:id="@+id/chooseButton"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="100dp"
        android:text="Далее"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15dp"
        android:clickable="true"
        android:textStyle="bold" />


    <Button
        android:id="@+id/selectButtonRazr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFour"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Разрешить уведомления"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textViewFour"
        android:layout_width="234dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textViewOne"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="223dp"
        android:layout_marginBottom="3dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Хотите ли вы получать уведомления от персонажа"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/selectButtonNoRazr"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectButtonRazr"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Не сейчас"
        android:textColor="@android:color/white" />


</RelativeLayout>