<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <TextView
        android:id="@+id/textViewOne"
        android:layout_width="234dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textViewTwo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="3dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Оставайтесь всегда на связи"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTwo"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="149dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="149dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Шаг 6/9"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/your_image_view_id"
        android:layout_width="match_parent"
        android:layout_height="506dp"
        android:layout_below="@+id/textViewOne"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="121dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitCenter" />


    <TextView
        android:id="@+id/chooseButton"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="141dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="98dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Далее"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/selectButtonRazr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFour"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Разрешить уведомления"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/textViewFour"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_below="@+id/textViewOne"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="3dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Хотите ли вы получать уведомления от персонажа"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/selectButtonNoRazr"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectButtonRazr"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_button"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Не сейчас"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14dp" />


</RelativeLayout>